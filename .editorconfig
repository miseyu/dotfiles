# EditorConfig for this project
root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_size = 4

[*.ts]
indent_style = space
indent_size = 4

[{*.json,*.md,*.yml,*yaml}]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
